@model Haidarieh.Application.Contracts.Sponsor.EditSponsor
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش اهداکننده </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام و نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="makeSlug('Name', 'Slug')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div><div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Tel" class="control-label">تلفن</label>
                    <input type="text" class="form-control" asp-for="Tel">
                    <span asp-validation-for="Tel" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IsVisible" class="control-label">وضعیت نمایش</label>
                    <input type="text" class="form-control" asp-for="IsVisible">
                    <span asp-validation-for="IsVisible" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Image" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Image">
                    <span asp-validation-for="Image" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageTitle" class="control-label">عنوان عکس</label>
                    <textarea class="form-control autogrow" asp-for="ImageTitle" onchange="fillField('ImageTitle', 'ImageAlt')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>                    
                    <span asp-validation-for="ImageTitle" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ImageAlt" class="control-label">توضیح عکس در گوگل</label>
                    <input type="text" class="form-control" asp-for="ImageAlt">
                    <span asp-validation-for="ImageAlt" class="error"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Bio" class="control-label">توضیحات</label>
                    <input type="text" class="form-control" asp-for="Bio">
                    <span asp-validation-for="Bio" class="error"></span>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id">

    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
