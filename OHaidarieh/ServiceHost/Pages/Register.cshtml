@page
@model ServiceHost.Pages.RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}

<div class="gap clearfix">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3 class="rtl abot-sec">ثبت نام</h3>
                </div>
                <div class="card-body">
                    @if(Model.Message!=null)
                    {
                        <div class="danger alert-danger">@Model.Message</div>
                    }
                    <form method="post" asp-page-handler="Register">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-address-card-o"></i></span>
                            </div>
                            <input type="text" size="50" class="form-control" name="fname" id="txt-fname" placeholder="نام ">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-address-card-o"></i></span>
                            </div>
                            <input type="text" size="50" class="form-control" name="lname" id="txt-lname" placeholder="نام خانوادگی">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-mobile-phone"></i></span>
                            </div>
                            <input type="tel" size="50" class="form-control" name="mobile" id="txt-mobile" placeholder="موبایل">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" size="50" class="form-control" name="username" id="txt-username" placeholder="نام کاربری">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" size="50" class="form-control" name="password" id="txt-password" placeholder="رمز عبور">
                        </div>
                        @*<div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text input-icon"><i class="fa fa-user"></i></span>
                            </div>
                            <input type="text" size="50" class="form-control" name="repassword" id="txt-repassword" placeholder="تکرار رمز عبور">
                        </div>*@
                        <div class="form-group">
                            <input type="submit" value="ثبت نام" class="abot-wrap badge-success alert">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
